<h1 class="main-title">Welcome to <%= @garden.user.name %>'s Garden</h1>

<div class="garden-grid">
  <% @products.each do |product| %>
    <div class="product-card">
      <div class="product-card-pic">
        <%= link_to product_path(product) do %>
          <%= image_tag product.image_url(:medium).to_s %>
        <% end %>
      </div>
      <div class="product-info">
        <h3><%= link_to product.name, product_path(product) %></h3>
        <div class="product-description">
          <%= product.description %>
        </div>
      </div>
    </div>
  <% end %>
</div>

<div class="new-product">
  <% if @user == current_user %>
    <div class="expander">
      <a href="javascript:void(0)" id="js-expander-trigger" class="expander-trigger expander-hidden">Add New Product</a>
      <div id="js-expander-content" class="expander-content">
        <ul class="new-product-form">
          <%= render 'newproductform' %>
        </ul>
      </div>
    </div>
  <% end %>
</div>

<div class="garden-info">
<div class="social-buttons">
  <ul>
    <li>
      <!-- Twitter -->
      <a href="http://twitter.com/home?status=<%= garden_url(@garden) %>" title="Share on Twitter" target="_blank" class="btn btn-twitter"><i class="fa fa-twitter"></i> Twitter</a>
    </li>
    <li>
      <!-- Facebook -->
      <a href="https://www.facebook.com/sharer/sharer.php?u=<%= garden_url(@garden) %>" title="Share on Facebook" target="_blank" class="btn btn-facebook"><i class="fa fa-facebook"></i> Facebook</a>
    </li>
    <li>
      <!-- Google+ -->
      <a href="https://plus.google.com/share?url=<%= garden_url(@garden) %>" title="Share on Google+" target="_blank" class="btn btn-googleplus"><i class="fa fa-google-plus"></i> Google+</a>
    </li>
  </ul>
</div>
  <div class="owner-info">
    <div class="profile-pic">
      <%=image_tag(@garden.user.image_url(:thumb).to_s) %>
    </div>
    <%= @garden.user.name %>
  </div>

  <div id="map-canvas" data-latitude="<%= @garden.latitude.to_f %>" data-longitude="<%= @garden.longitude.to_f %>">
  </div>
</div>
